<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorAccentLight" />
            <corners
                android:radius="@dimen/cornerRadius" />
            <padding
                android:left="@dimen/marginSmall"
                android:top="@dimen/marginSmall"
                android:right="@dimen/marginSmall"
                android:bottom="@dimen/marginSmall" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/colorAccent" />
            <corners
                android:radius="@dimen/cornerRadius" />
            <padding
                android:left="@dimen/marginSmall"
                android:top="@dimen/marginSmall"
                android:right="@dimen/marginSmall"
                android:bottom="@dimen/marginSmall" />
        </shape>
    </item>
</selector>